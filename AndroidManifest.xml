<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.tokyo.shibuya.pinco"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />
    
    <uses-permission android:name="android.permission.INTERNET" />  

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="jp.tokyo.shibuya.pinco.tab.BaseTabActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="jp.tokyo.shibuya.pinco.activity.MainActivity" android:screenOrientation="portrait" android:launchMode="singleTop"></activity>
        <activity android:name=".activity.AuthenticationActivity" android:screenOrientation="portrait" android:launchMode="singleTop"></activity>
    </application>

</manifest>
